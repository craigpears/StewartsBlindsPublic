@model AddConfigurationOptionsViewModel

@{
    ViewData["Title"] = "Configuration";
}

<h1>Add New @Model.SelectedField to @Model.SelectedProductType</h1>

<div class="row">
    <div class="col-sm-12">
        <form method="post" asp-action="AddOptions" asp-controller="Configuration">
            <input type="hidden" name="SelectedProductType" value="@Model.SelectedProductType" />
            <input type="hidden" name="SelectedField" value="@Model.SelectedField" />
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" name="NewOptions" />
                <b>Separate multiple with commas</b>
            </div>

            <button class="btn btn-primary">Save</button>
        </form>
    </div>
</div>