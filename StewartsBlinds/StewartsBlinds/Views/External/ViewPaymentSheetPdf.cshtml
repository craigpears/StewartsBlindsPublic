@model PaymentSheetsViewModel

@{
    Layout = "../Shared/_LightLayout.cshtml";
}

<h1>Payment Sheet</h1>
<p>@Model.FromDate.ToString("dd/MM/yyyy") - @Model.FromDate.AddDays(7).ToString("dd/MM/yyyy")</p>

<table class="table">
    <tr>
        <th>Date</th>
        <th>Customer</th>
        <th>Order Number</th>
        <th>Amount</th>
        <th>Payment Method</th>
        <th>Payment Type</th>
        <th>Taken By</th>
        <th>Office Confirmed</th>
    </tr>
    @foreach (var payment in Model.Payments)
    {   
        <tr>
            <td>@payment.CreatedDate.ToString("dd/MM/yyyy")</td>
            <td>@payment.Appointment.Surname</td>
            <td>@payment.Appointment.Id</td>
            <td>£@payment.AmountPaid</td>
            <td>@payment.PaymentMethod</td>
            <td>@payment.PaymentType</td>
            <td>@payment.TakenBy</td>
            <td>@payment.Confirmed</td>
        </tr>
    }
</table>